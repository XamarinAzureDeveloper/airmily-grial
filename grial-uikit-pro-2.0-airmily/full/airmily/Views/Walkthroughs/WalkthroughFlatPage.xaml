<?xml version="1.0" encoding="UTF-8"?>
<CarouselPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="airmily.WalkthroughFlatPage"
	xmlns:local="clr-namespace:airmily;assembly=airmily">

	<local:WalkthroughFlatStepItemTemplate 
		BackgroundColor="#e51e61"
		StepBackgroundImage=""
		Header="Welcome" 
		Text="To a new world of posibilities, &#10; welcome to Grial UI Kit." 
		IconText="{ x:Static local:GrialShapesFont.Public }"
		IconColor="#FFF"
		ButtonText="Next" 
		ButtonBackgroundColor="#B31250"
	/>

	<local:WalkthroughFlatStepItemTemplate 
		BackgroundColor="#7C4ECD"
		Header="Save time" 
		Text="Save countless hours of UI design. &#10; Focus on what you do best."
		IconText="{ x:Static local:GrialShapesFont.FlashOn }"
		IconColor="#FFF"
		ButtonText="Next"
		ButtonBackgroundColor="#6A40B9"
	/>
	
	<local:WalkthroughFlatStepItemTemplate 
		BackgroundColor="#5F7DD4"
		Header="Learn"
		Text="Learn while you do. &#10; Grial has tones of examples for you to play."
		IconText="{ x:Static local:GrialShapesFont.School }"
		IconColor="#FFF"
		ButtonText="Finish!"
		ButtonBackgroundColor="#525ABB"
	/>

</CarouselPage>
