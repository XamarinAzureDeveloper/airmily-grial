<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:local="clr-namespace:airmily;assembly=airmily"	
	xmlns:artina="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared"
	x:Class="airmily.DashboardWithImagesPage"
	Title="Image Dashboard">
	<ContentPage.ToolbarItems>
	    <ToolbarItem 
			Icon="settings_icon.png" 
			Priority="1" 
			Clicked="NavigateToGrialSettingsPage"/>
	</ContentPage.ToolbarItems>

	<ContentPage.Content>
		<artina:GridOptionsView 
			ColumnCount="3"
			RowCount="3"
			ColumnSpacing="0" 
			RowSpacing="0" 
			Padding="0" 
			VerticalOptions="FillAndExpand" 
			ItemsSource="{Binding Items}">
			<artina:GridOptionsView.ItemTemplate>
				<DataTemplate>
					<local:DashboardItemTemplate 
						ShowBackgroundImage="true"
						ShowBackgroundColor="false"
						ShowiconColoredCircleBackground="false"
						BackgroundColor="Black"
						TextColor="{ DynamicResource OverImageTextColor }"/>
				</DataTemplate>
			</artina:GridOptionsView.ItemTemplate>
		</artina:GridOptionsView>
	</ContentPage.Content>
</ContentPage>